{
  "header": "",
  "footer": "\n\n---",
  "categories": [
    {
      "title": "## ✨ 新功能",
      "labels": ["feat", "feature"],
      "commit_types": ["feat"]
    },
    {
      "title": "## 🐛 修复",
      "labels": ["fix"],
      "commit_types": ["fix"]
    },
    {
      "title": "## 📚 文档",
      "labels": ["docs"],
      "commit_types": ["docs"]
    },
    {
      "title": "## 🚀 性能优化",
      "labels": ["perf"],
      "commit_types": ["perf"]
    },
    {
      "title": "## 💅 样式调整",
      "labels": ["style"],
      "commit_types": ["style"]
    },
    {
      "title": "## 🔨 重构",
      "labels": ["refactor"],
      "commit_types": ["refactor"]
    },
    {
      "title": "## 🧪 测试",
      "labels": ["test"],
      "commit_types": ["test"]
    },
    {
      "title": "## 📦 构建",
      "labels": ["build"],
      "commit_types": ["build"]
    },
    {
      "title": "## 🤖 CI/CD",
      "labels": ["ci"],
      "commit_types": ["ci"]
    },
    {
      "title": "## 📌 其他",
      "labels": [],
      "exhaustive": false
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  },
  "pr_template": "PR: ##{{NUMBER}} - #{{TITLE}} by @#{{AUTHOR}}",
  "template": "<summary>📚 更新日志</summary>\n<details>\n#{{CHANGELOG}}\n\n#{{UNCATEGORIZED}}\n\n#{{CONTRIBUTORS}}\n</details>",
  "empty_template": "- 暂无改动",
  "trim_values": true,
  "max_tags_to_fetch": 5,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "tag_resolver": {
    "method": "semver"
  },
  "label_extractor": [
    {
      "pattern": "^(feat|fix|docs|perf|refactor|style|test|build|ci|chore)(?:\\(.*\\))?:",
      "on_property": "title",
      "method": "match",
      "target": "$1"
    },
    {
      "pattern": "^chore:",
      "on_property": "title",
      "method": "match",
      "target": "other"
    },
    {
      "pattern": "^Merge pull request",
      "on_property": "title",
      "method": "match",
      "target": "other"
    }
  ],
  "base_branches": ["master"]
}
