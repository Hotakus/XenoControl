{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xenocontrol",
  "version": "0.2.1",
  "identifier": "com.hotakus.xenocontrol",
  "build": {
    "frontendDist": "./webassets"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "XenoControl",
        "fullscreen": false,
        "decorations": false,
        "width": 1080,
        "height": 720,
        "resizable": false,
        "transparent": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png"
    ]
  }
}