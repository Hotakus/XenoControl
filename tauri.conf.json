{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xenocontrol",
  "version": "0.1.5",
  "identifier": "com.hotakus.xenocontrol",
  "build": {
    "frontendDist": "./webassets"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "XenoControl",
        "fullscreen": false,
        "decorations": false,
        "width": 1280,
        "height": 720,
        "resizable": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "webassets/assets/xenocontrol_logo.png"
    ]
  }
}